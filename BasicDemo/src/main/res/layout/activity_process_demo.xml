<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        style="@style/BigBtn.PrimaryBg"
        android:layout_height="@dimen/tp_40"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/tp_12"
        android:text="我是一个单独的进程"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_switch_skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tp_12"
        android:layout_marginBottom="@dimen/tp_12"
        android:backgroundTint="@color/primary_50"
        android:contentDescription="@string/switch_skin"
        android:tint="@color/primary_main"
        app:borderWidth="0dp"
        app:elevation="@dimen/tp_10"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/secondary_300"
        app:srcCompat="@drawable/ic_night" />
</androidx.constraintlayout.widget.ConstraintLayout>
