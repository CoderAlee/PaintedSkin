<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackBtn">
        <item name="android:src">@drawable/ic_arrow_ios_left</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">@dimen/tp_12</item>
        <item name="tint">@color/icon_available</item>
        <item name="android:background">@drawable/selector_bg_back_button</item>
    </style>

    <style name="BackBtn.Wrapper">
        <item name="android:layout_height">@dimen/tp_50</item>
        <item name="android:layout_width">@dimen/tp_50</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="BigBtn" parent="text.Button1">
        <item name="android:gravity">center</item>
    </style>

    <style name="MediumBtn" parent="text.Button2">
        <item name="android:gravity">center</item>
    </style>

    <style name="BigBtn.PrimaryBg">
        <item name="android:background">@drawable/selector_bg_primary_button</item>
        <item name="android:textColor">@color/selector_primary_btn_text_color</item>
    </style>

    <style name="MediumBtn.Primary">
        <item name="android:background">@drawable/selector_bg_primary_button</item>
        <item name="android:textColor">@color/selector_primary_btn_text_color</item>
    </style>

    <style name="BigBtn.Warning">
        <item name="android:background">@drawable/selector_bg_warning_button</item>
        <item name="android:textColor">@color/selector_warning_btn_text_color</item>
    </style>

    <style name="MediumBtn.Warning">
        <item name="android:background">@drawable/selector_bg_warning_button</item>
        <item name="android:textColor">@color/selector_warning_btn_text_color</item>
    </style>

    <style name="BigBtn.White">
        <item name="android:background">@drawable/selector_bg_big_white_button</item>
        <item name="android:textColor">@color/selector_big_white_btn_text_color</item>
    </style>

    <style name="MediumBtn.White">
        <item name="android:background">@drawable/selector_bg_big_white_button</item>
        <item name="android:textColor">@color/selector_big_white_btn_text_color</item>
    </style>

    <style name="BigBtn.Default">
        <item name="android:background">@drawable/selector_bg_big_default_button</item>
        <item name="android:textColor">@color/selector_default_btn_text_color</item>
    </style>

    <style name="MediumBtn.Default">
        <item name="android:background">@drawable/selector_bg_big_default_button</item>
        <item name="android:textColor">@color/selector_default_btn_text_color</item>
    </style>

    <style name="BigBtn.Ghost">
        <item name="android:background">@drawable/selector_bg_big_ghost_button</item>
        <item name="android:textColor">@color/selector_default_btn_text_color</item>
    </style>

    <style name="MediumBtn.Ghost">
        <item name="android:background">@drawable/selector_bg_big_ghost_button</item>
        <item name="android:textColor">@color/selector_default_btn_text_color</item>
    </style>

    <style name="BigBtn.BlueStroke">
        <item name="android:background">@drawable/shape_bg_blue_stroke_button</item>
        <item name="android:textColor">@color/bg_stroke_blue_color</item>
        <item name="android:paddingStart">@dimen/tp_12</item>
        <item name="android:paddingTop">@dimen/tp_8</item>
        <item name="android:paddingEnd">@dimen/tp_12</item>
        <item name="android:paddingBottom">@dimen/tp_8</item>
    </style>

    <style name="MediumBtn.BlueStroke">
        <item name="android:background">@drawable/shape_bg_blue_stroke_button</item>
        <item name="android:textColor">@color/bg_stroke_blue_color</item>
    </style>

