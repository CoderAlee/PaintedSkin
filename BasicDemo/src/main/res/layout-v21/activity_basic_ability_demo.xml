<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/basic_ability" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_switch_skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tp_12"
        android:layout_marginBottom="@dimen/tp_12"
        android:backgroundTint="@color/primary_50"
        android:contentDescription="@string/switch_skin"
        android:tint="@color/primary_main"
        app:borderWidth="0dp"
        app:elevation="@dimen/tp_10"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/secondary_300"
        app:srcCompat="@drawable/ic_night" />
</androidx.constraintlayout.widget.ConstraintLayout>
