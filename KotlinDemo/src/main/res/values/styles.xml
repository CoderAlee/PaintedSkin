<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--common-->
    <style name="WrapperControl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WholeControl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RowControl" parent="WholeControl">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CommonBg" parent="WholeControl">
        <item name="android:background">@color/white_800</item>
    </style>

    <style name="CommonDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

    <style name="DialogBackground">
        <item name="android:layout_width">@dimen/tp_265</item>
        <item name="android:layout_height">@dimen/tp_140</item>
        <item name="android:paddingStart">@dimen/tp_12</item>
        <item name="android:paddingEnd">@dimen/tp_12</item>
        <item name="android:background">@mipmap/bg_default_dialog</item>
    </style>

    <style name="MenuTitle" parent="text.Button1.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/tp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/tp_12</item>
        <item name="drawableTint">@color/primary_main</item>
    </style>

    <style name="MenuRadioGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tp_48</item>
        <item name="android:layout_marginTop">@dimen/tp_12</item>
        <item name="android:background">@drawable/shape_bg_set_checked_unselected</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="MenuRadioButton" parent="text.Body2.BlackHigh">
        <item name="android:layout_width">@dimen/tp_0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_set_checked</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
</resources>